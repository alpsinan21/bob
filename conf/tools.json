{
  "lint": {
    "default": "jshint",
    "types": {
      "jshint": {
        "bin": "${bob}/node_modules/jshint/bin/hint",
        "opts": {
          "human": "",
          "robot": "--jslint-reporter"
        },
        "files": "lib/ test/"
      },
      "nodelint": {
        "bin": "${bob}/node_modules/nodelint/nodelint",
        "opts": {
          "human": "",
          "robot": "--reporter=xml"
        },
        "files": "lib/ test/"
      }
    }
  },
  "style": {
    "default": "jscheckstyle",
    "types": {
      "jscheckstyle": {
        "bin": "${bob}/node_modules/jscheckstyle/bin/jscheckstyle",
        "opts": {
          "human": "--violations",
          "robot": "--checkstyle"
        },
        "files": "lib/"
      }
    }
  },
  "test": {
    "default": "mocha",
    "types": {
      "mocha": {
        "bin": "${bob}/node_modules/mocha/bin/mocha",
        "opts": {
          "human": "--reporter spec",
          "robot": "--reporter xunit"
        },
        "files": "test/"
      },
      "vows": {
        "bin": "${bob}/node_modules/vows/bin/vows",
        "opts": {
          "human": "--spec",
          "robot": "--xunit"
        },
        "files": "`find test -name \"*.js\" | tr \"\\r\\n\" \" \"`"
      }
    },
    "overrides": {
      "pkg": {
        "test-npm": "scripts.test"
      }
    }
  },
  "coverage": {
    "default": "mocha",
    "types": {
      "mocha": {
        "dep": "instrument-jscoverage",
        "bin": "${bob}/node_modules/mocha/bin/mocha",
        "opts": "--reporter html-cov",
        "files": ".bob/instrumented/test/"
      },
      "vows": {
        "dep": "instrument-jscoverage",
        "bin": "${bob}/node_modules/vows/bin/vows",
        "opts": {
          "human": "--silent --cover-plain",
          "robot": "--silent --cover-xml"
        },
        "files": ".bob/instrumented/test/"
      }
    },
    "overrides": {
      "pkg": {
        "test-npm": "scripts.test"
      }
    }
  },
  "doc": {
    "default": "dox",
    "types": {
      "dox": {
        "bin": "${bob}/node_modules/dox/bin/dox",
        "opts": {
          "human": "",
          "robot": ""
        },
        "files": "lib/"
      }
    }
  },
  "publish": {
    "default": "npm",
    "types": {
      "npm": {
        "dep": "publish-npm"
      },
      "ivy": {
        "dep": "publish-ivy"
      }
    }
  },
  "deploy": {
    "default": "scp",
    "types": {
      "scp": {
        "bin": "scp",
        "opts": "-i ${deploy_key} -P ${deploy_port}",
        "files": ".bob/artifact/${name}-${version}.tar.gz ${deploy_user}@${deploy_host}:${deploy_dir}",
        "port": 22,
        "dir": "."
      },
      "ftp": {
        "bin": "ncftpput",
        "opts": "-f ${deploy_key} -P ${deploy_port} -u ${deploy_user}",
        "files": "${deploy_dir} .bob/artifact/${name}-${version}.tar.gz",
        "port": 21,
        "dir": "/"
      }
    },
    "overrides": {
      "pkg": {
        "test-npm": "scripts.test"
      }
    }
  },
  "stop": {
    "overrides": {
      "pkg": {
        "stop-npm": "scripts.stop"
      }
    }
  },
  "start": {
    "overrides": {
      "pkg": {
        "start-npm": "scripts.start"
      }
    }
  },
  "restart": {
    "overrides": {
      "pkg": {
        "restart-npm": "scripts.restart"
      }
    }
  }
}