{
  "lint": {
    "default": "jshint",
    "types": {
      "jshint": {
        "bin": "${bob}/node_modules/jshint/bin/jshint",
        "opts": {
          "human": "",
          "robot": "--jslint-reporter"
        },
        "files": "lib/ test/"
      },
      "nodelint": {
        "bin": "${bob}/node_modules/nodelint/nodelint",
        "opts": {
          "human": "",
          "robot": "--reporter=xml"
        },
        "files": "lib/ test/"
      },
      "esvalidate": {
        "bin": "${bob}/node_modules/esprima/bin/esvalidate.js",
        "opts": {
          "human": "",
          "robot": "--format=junit"
        },
        "files": "`find lib -name \"*.js\" | tr \"\\r\\n\" \" \"` `find test -name \"*.js\" | tr \"\\r\\n\" \" \"`"
      }
    }
  },
  "test": {
    "default": "mocha",
    "types": {
      "buster": {
        "bin": "${bob}/node_modules/buster/bin/buster-test",
        "opts": {
          "human": "",
          "robot": ""
        },
        "files": "test --config ${bob}/conf/buster-test.js"
      },
      "mocha": {
        "bin": "${bob}/node_modules/mocha/bin/mocha",
        "opts": {
          "human": "--colors --reporter spec --recursive",
          "robot": "--reporter xunit --recursive"
        },
        "files": "test/"
      },
      "nodeunit": {
        "bin": "${bob}/node_modules/nodeunit/bin/nodeunit",
        "opts": {
          "human": "",
          "robot": "--reporter junit --output .bob/report/test/"
        },
        "files": "test/"
      },
      "vows": {
        "bin": "${bob}/node_modules/vows/bin/vows",
        "opts": {
          "human": "--spec",
          "robot": "--xunit"
        },
        "files": "`find test -name \"*.js\" | tr \"\\r\\n\" \" \"`"
      }
    },
    "overrides": {
      "pkg": {
        "test-npm": "scripts.test"
      }
    }
  },
  "test-integration": {
    "default": "mocha",
    "types": {
      "buster": {
        "bin": "${bob}/node_modules/buster/bin/buster",
        "opts": {
          "human": "",
          "robot": ""
        },
        "files": "test --config ${bob}/conf/buster-test-integration.js"
      },
      "mocha": {
        "bin": "${bob}/node_modules/mocha/bin/mocha",
        "opts": {
          "human": "--reporter spec --recursive",
          "robot": "--reporter xunit --recursive"
        },
        "files": "test-integration/"
      }
    }
  },
  "test-acceptance": {
    "default": "mocha",
    "types": {
      "cucumber": {
        "bin": "${bob}/node_modules/cucumber/bin/cucumber.js",
        "opts": {
          "human": "--format pretty",
          "robot": "--format json"
        },
        "files": "test-acceptance/"
      },
      "mocha": {
        "bin": "${bob}/node_modules/mocha/bin/mocha",
        "opts": {
          "human": "--reporter spec --recursive",
          "robot": "--reporter xunit --recursive"
        },
        "files": "test-acceptance/"
      }
    }
  },
  "coverage": {
    "default": "mocha",
    "types": {
      "buster-istanbul": {
        "bin": "${bob}/node_modules/buster/bin/buster",
        "opts": {
          "human": "",
          "robot": ""
        },
        "files": "test --config ${bob}/conf/buster-coverage.js"
      },
      "mocha": {
        "dep": "instrument-jscoverage",
        "bin": "${bob}/node_modules/mocha/bin/mocha",
        "opts": "--reporter html-cov",
        "files": ".bob/instrumented/test/"
      },
      "vows": {
        "dep": "instrument-jscoverage",
        "bin": "${bob}/node_modules/vows/bin/vows",
        "opts": {
          "human": "--silent --cover-plain",
          "robot": "--silent --cover-html"
        },
        "files": "`find .bob/instrumented/test/ -name \"*.js\" | tr \"\\r\\n\" \" \"`"
      }
    }
  },
  "complexity": {
    "default": "complexity-report",
    "types": {
      "complexity-report": {
        "bin": "${bob}/node_modules/complexity-report/src/cli.js",
        "opts": {
          "human": "--format plain --maxcc 5",
          "robot": "--format xml --maxcc 5"
        },
        "files": "`find test -name \"*.js\" | tr \"\\r\\n\" \" \"`"
      },
      "jscheckstyle": {
        "bin": "${bob}/node_modules/jscheckstyle/bin/jscheckstyle",
        "opts": {
          "human": "--violations",
          "robot": "--checkstyle"
        },
        "files": "lib/"
      }
    }
  },
  "doc": {
    "default": "dox",
    "types": {
      "dox": {
        "bin": "${bob}/node_modules/dox/bin/dox",
        "opts": {
          "human": "",
          "robot": ""
        },
        "files": "lib/"
      }
    }
  },
  "depgraph": {
    "default": "madge",
    "types": {
      "madge": {
        "bin": "${bob}/node_modules/madge/bin/madge",
        "opts": "--image .bob/report/depgraph.png",
        "files": "lib/"
      }
    }
  },
  "package": {
    "default": "tar.gz",
    "types": {
      "tar.gz": {
        "bin": "tar",
        "opts": "-X ${bob}/conf/package-exclude -cvzf ${name}-${version}.${package_type} ${name}-${version}/"
      },
      "tar": {
        "bin": "tar",
        "opts": "-X ${bob}/conf/package-exclude -cvf ${name}-${version}.${package_type} ${name}-${version}/"
      },
      "zip": {
        "bin": "zip",
        "opts": "${name}-${version}.${package_type} -r ${name}-${version}/ -x ${bob}/conf/package-exclude"
      }
    }
  },
  "publish": {
    "default": "npm",
    "types": {
      "npm": {
        "dep": "publish-npm"
      },
      "ivy": {
        "dep": "publish-ivy"
      }
    }
  },
  "send": {
    "default": "scp",
    "types": {
      "scp": {
        "bin": "scp",
        "opts": "-i ${send_key} -P ${send_port} -r",
        "files": ".bob/artifact/* ${send_user}@${send_host}:${send_dir}",
        "port": 22,
        "dir": "."
      },
      "ftp": {
        "bin": "ncftpput",
        "opts": "-f ${send_key} -P ${send_port} -u ${send_user} -R",
        "files": "${send_dir} .bob/artifact/*",
        "port": 21,
        "dir": "/"
      }
    }
  },
  "stop": {
    "overrides": {
      "pkg": {
        "stop-npm": "scripts.stop"
      }
    }
  },
  "start": {
    "overrides": {
      "pkg": {
        "start-npm": "scripts.start"
      }
    }
  },
  "restart": {
    "overrides": {
      "pkg": {
        "restart-npm": "scripts.restart"
      }
    }
  }
}
