{
  "default": "plato",
  "types": {
    "plato": {
      "bin": "${bob}/node_modules/plato/bin/plato",
      "opts": {
        "human": "--quiet --recurse --dir .bob/report/complexity",
        "robot": "--quiet --recurse --dir .bob/report/complexity"
      },
      "files": "lib"
    },
    "jscheckstyle": {
      "bin": "${bob}/node_modules/jscheckstyle/bin/jscheckstyle",
      "opts": {
        "human": "--violations",
        "robot": "--checkstyle"
      },
      "files": "lib/"
    }
  }
}